<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/spilt_line"/>

    <!--chat func-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <!--输入框-->
        <RelativeLayout
            android:id="@+id/rl_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_bg_gray">

            <com.keyboard.view.EmoticonsEditText
                android:id="@+id/et_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_face"
                android:background="@null"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="16sp"
                android:maxLines="4"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="6dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="6dp">
            </com.keyboard.view.EmoticonsEditText>

            <!--表情-->
            <ImageView
                android:id="@+id/btn_face"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_face_normal" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_send_bg"
            android:layout_marginLeft="10dp"
            android:text="@string/btn_text_send"
            android:textColor="@color/btn_send_text"
            android:textSize="14sp"
            android:enabled="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_foot_func"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            android:id="@+id/ic_facekeyboard"
            layout="@layout/view_keyboardpopwindow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>