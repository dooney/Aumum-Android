<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/grey_light" />
            <solid
                android:color="@color/bbutton_danger_pressed" />
            <corners android:radius="@dimen/bbuton_rounded_corner_radius"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/grey_light" />
            <solid
                android:color="@color/bbutton_danger" />
            <corners android:radius="@dimen/bbuton_rounded_corner_radius"/>
        </shape>
    </item>

</selector>