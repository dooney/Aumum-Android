<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="LinearLayout" />
    <style name="LinearLayout.NavButton" parent="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_large</item>
        <item name="android:background">@drawable/button_navigation</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="LinearLayout.ListNavButton" parent="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/margin_large</item>
        <item name="android:paddingRight">@dimen/margin_large</item>
        <item name="android:background">@drawable/button_list_navigation</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/am_black</item>
        <item name="android:background">@drawable/button_yellow_solid</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/margin_large</item>
        <item name="android:paddingRight">@dimen/margin_large</item>
    </style>
    <style name="Button.Dialog.Ok" parent="Button.Primary">
        <item name="android:text">@string/label_ok</item>
    </style>
    <style name="Button.Dialog.Cancel" parent="Button">
        <item name="android:text">@string/label_cancel</item>
        <item name="android:textColor">@color/am_black</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/margin_large</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="EditText.Box" parent="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|top</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    <style name="EditText.MultiLine" parent="EditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    <style name="EditText.Dialog" parent="EditText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="EditText.Dialog.Multiline" parent="EditText.Dialog">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ImageView.Avatar" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_medium</item>
        <item name="android:layout_height">@dimen/avatar_sz_medium</item>
    </style>
    <style name="ImageView.Avatar.Thumbnail" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_small</item>
        <item name="android:layout_height">@dimen/avatar_sz_small</item>
    </style>
    <style name="ImageView.Avatar.Large" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_large</item>
        <item name="android:layout_height">@dimen/avatar_sz_large</item>
    </style>
    <style name="ImageView.Avatar.ExtraLarge" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_extra_large</item>
        <item name="android:layout_height">@dimen/avatar_sz_extra_large</item>
    </style>
    <style name="ImageView.Avatar.ExtremeLarge" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_extreme_large</item>
        <item name="android:layout_height">@dimen/avatar_sz_extreme_large</item>
    </style>
    <style name="ImageView.Avatar.Chat" parent="ImageView">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
    </style>
    <style name="ImageView.Unread.Small" parent="ImageView">
        <item name="android:src">@drawable/unread</item>
    </style>
    <style name="ImageView.Dialog.Popup" parent="ImageView">
        <item name="android:minWidth">300dp</item>
        <item name="android:minHeight">360dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="ImageView.Delete" parent="ImageView">
        <item name="android:src">@drawable/ic_fa_times_s</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/am_black</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
    </style>
    <style name="TextView.Title" parent="TextView">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextView.Subtitle" parent="TextView">
        <item name="android:textColor">@color/am_grey_medium</item>
    </style>
    <style name="TextView.Subtitle.Small" parent="TextView.Subtitle">
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="TextView.Multiline" parent="TextView">
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    <style name="ButtonTextView" parent="TextView.Subtitle">
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:background">@drawable/buttontext_background</item>
    </style>
    <style name="TextView.Comment" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_comment</item>
        <item name="android:text">@string/label_comment</item>
    </style>
    <style name="TextView.Share" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_share</item>
    </style>
    <style name="TextView.Like" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_like</item>
        <item name="android:text">@string/label_like</item>
    </style>
    <style name="TextView.Chat" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_chat</item>
        <item name="android:text">@string/label_chat</item>
    </style>
    <style name="TextView.UserName" parent="TextView">
        <item name="android:textColor">@color/am_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextView.Dialog" parent="TextView">
        <item name="android:layout_width">300dp</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>
    <style name="TextView.Dialog.List" parent="TextView">
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>
    <style name="TextView.Dialog.Title" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/dialog_title_background</item>
        <item name="android:padding">@dimen/margin_large</item>
        <item name="android:textColor">@color/am_white</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>
    <style name="TextView.Notification" parent="TextView">
        <item name="android:textColor">@color/am_red_dark</item>
    </style>
    <style name="TextView.Empty" parent="TextView.Subtitle" />
    <style name="TextView.Reload" parent="TextView">
        <item name="android:text">@string/info_click_to_reload</item>
        <item name="android:textColor">@color/am_red_dark</item>
    </style>
    <style name="TextView.Label" parent="TextView.Subtitle">
        <item name="android:paddingRight">@dimen/margin_extra_large</item>
    </style>

    <!-- Splash -->
    <style name="Button.SignIn" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/am_white</item>
        <item name="android:text">@string/label_sign_in</item>
        <item name="android:background">@drawable/button_white_round</item>
    </style>
    <style name="Button.SignUp" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/am_yellow</item>
        <item name="android:text">@string/label_sign_up</item>
        <item name="android:background">@drawable/button_yellow_round</item>
    </style>

    <!-- Report -->
    <style name="EditText.Report.Type" parent="EditText">
        <item name="android:hint">@string/hint_report_type</item>
    </style>
    <style name="EditText.Report.Details" parent="EditText.MultiLine">
        <item name="android:hint">@string/hint_report_details</item>
    </style>

    <!-- Moment -->
    <style name="TextView.Moment.UserName" parent="TextView.UserName" />
    <style name="TextView.Moment.CreatedAt" parent="TextView.Subtitle.Small" />
    <style name="EditText.Moment.Text" parent="EditText.MultiLine">
        <item name="android:hint">@string/hint_moment_text</item>
    </style>
    <style name="TextView.Moment.Likes" parent="ButtonTextView">
        <item name="android:layout_width">@dimen/avatar_sz_small</item>
        <item name="android:layout_height">@dimen/avatar_sz_small</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="LinearLayout.Moment.UserAvatars" parent="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/avatar_sz_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Moment -->
    <style name="TextView.Comment.UserName" parent="TextView.UserName" />
    <style name="TextView.Comment.CreatedAt" parent="TextView.Subtitle.Small" />
    <style name="TextView.Comment.Content" parent="TextView.Multiline">
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>

    <!-- Conversation -->
    <style name="TextView.Conversation.ScreenName" parent="TextView.UserName">
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>
    <style name="TextView.Conversation.MessageBody" parent="TextView.Subtitle">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextView.Conversation.TimeStamp" parent="TextView.Subtitle.Small" />

    <!-- Chat -->
    <style name="EditText.Chat.Text" parent="EditText.MultiLine">
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
    </style>
    <style name="TextView.ChatMessage.TimeStamp" parent="TextView">
        <item name="android:textColor">@color/am_white</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:background">@drawable/chat_system_msg_background</item>
    </style>
    <style name="TextView.ChatMessage.UserName" parent="TextView">
        <item name="android:textColor">@color/am_red</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_extra_small</item>
    </style>
    <style name="TextView.ChatMessage.Text" parent="TextView">
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:maxWidth">225dp</item>
    </style>
    <style name="TextView.ChatMessage.ReceivedText" parent="TextView.ChatMessage.Text">
        <item name="android:paddingLeft">@dimen/margin_extra_large</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:background">@drawable/chat_received_msg_background</item>
    </style>
    <style name="TextView.ChatMessage.SentText" parent="TextView.ChatMessage.Text">
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_extra_large</item>
        <item name="android:textColor">@color/am_white</item>
        <item name="android:background">@drawable/chat_sent_msg_background</item>
    </style>
    <style name="TextView.ChatMessage.System" parent="TextView">
        <item name="android:textColor">@color/am_white</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:background">@drawable/chat_system_msg_background</item>
    </style>
    <style name="ImageView.ChatMessage.SentFailed" parent="ImageView">
        <item name="android:src">@drawable/chat_msg_sent_failed_icon</item>
    </style>
    <style name="ImageView.ChatMessage.Image" parent="ImageView">
        <item name="android:maxWidth">128dp</item>
        <item name="android:maxHeight">128dp</item>
        <item name="android:scaleType">fitStart</item>
    </style>
    <style name="TextView.ChatMessage.Progress" parent="TextView.Subtitle">
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
    </style>

    <!-- Contact -->
    <style name="TextView.ContactRequest.ScreenName" parent="TextView.UserName" />
    <style name="TextView.ContactRequest.Info" parent="TextView.Subtitle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextView.ContactRequest.Added" parent="TextView.Subtitle">
        <item name="android:text">@string/label_added</item>
    </style>

    <!-- Settings -->
    <style name="Button.Logout" parent="Button.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:text">@string/label_logout</item>
        <item name="android:paddingTop">@dimen/margin_large</item>
        <item name="android:paddingBottom">@dimen/margin_large</item>
    </style>

    <!-- Feedback -->
    <style name="EditText.Feedback.Details" parent="EditText.MultiLine">
        <item name="android:hint">@string/hint_feedback_details</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
    </style>

    <!-- Account -->
    <style name="Button.Login" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/am_yellow</item>
        <item name="android:text">@string/label_login</item>
        <item name="android:background">@drawable/button_yellow_round</item>
    </style>
    <style name="Button.JoinNow" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/am_white</item>
        <item name="android:text">@string/label_join_now</item>
        <item name="android:background">@drawable/button_white_round</item>
    </style>
    <style name="Button.Account.Large" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/am_yellow</item>
        <item name="android:background">@drawable/button_yellow_round</item>
    </style>
    <style name="Button.Register" parent="Button.Account.Large">
        <item name="android:text">@string/label_register</item>
    </style>
    <style name="TextView.Account" parent="TextView">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:textColor">@color/am_white</item>
    </style>
    <style name="TextView.Account.Small" parent="TextView">
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:textColor">@color/am_white</item>
    </style>
    <style name="EditText.Account" parent="EditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/am_white</item>
        <item name="android:textColorHint">@color/am_yellow_blur</item>
    </style>
    <style name="EditText.Account.Phone" parent="EditText.Account">
        <item name="android:inputType">phone</item>
    </style>
    <style name="EditText.Account.Password" parent="EditText.Account">
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="EditText.Login.Phone" parent="EditText.Account.Phone">
        <item name="android:hint">@string/hint_login_phone</item>
    </style>
    <style name="EditText.Login.Password" parent="EditText.Account.Password">
        <item name="android:hint">@string/hint_login_password</item>
    </style>
    <style name="EditText.Register.Phone" parent="EditText.Account.Phone">
        <item name="android:hint">@string/hint_register_phone</item>
    </style>
    <style name="EditText.Register.Password" parent="EditText.Account.Password">
        <item name="android:hint">@string/hint_register_password</item>
    </style>
    <style name="EditText.VerificationCode" parent="EditText.Account">
        <item name="android:hint">@string/hint_verification_code</item>
        <item name="android:inputType">phone</item>
    </style>
    <style name="Button.VerifyCode" parent="Button.Account.Large">
        <item name="android:text">@string/label_ok</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>
    <style name="Button.ResendCode" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/am_white</item>
        <item name="android:background">@drawable/button_white_round</item>
    </style>
    <style name="EditText.ResetPassword.Email" parent="EditText.Account">
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <style name="Button.ResetPassword" parent="Button.Account.Large">
        <item name="android:text">@string/label_submit</item>
    </style>
    <style name="TextView.ResetPassword.Email" parent="TextView">
        <item name="android:textColor">@color/am_yellow</item>
    </style>
    <style name="Button.ResendResetPassword" parent="Button.Account.Large">
        <item name="android:text">@string/label_resend_reset_password_email</item>
    </style>
    <style name="EditText.Register.ScreenName" parent="EditText.Account">
        <item name="android:hint">@string/hint_screen_name</item>
        <item name="android:inputType">textPersonName</item>
    </style>
    <style name="EditText.Account.City" parent="EditText.Account">
        <item name="android:hint">@string/hint_city</item>
    </style>
    <style name="EditText.Account.Area" parent="EditText.Account">
        <item name="android:hint">@string/hint_area</item>
    </style>
    <style name="EditText.Register.Email" parent="EditText.Account">
        <item name="android:hint">@string/hint_email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <style name="EditText.Register.About" parent="EditText.MultiLine">
        <item name="android:textColor">@color/am_white</item>
        <item name="android:hint">@string/hint_about</item>
        <item name="android:textColorHint">@color/am_white_blur</item>
    </style>
    <style name="Button.SaveProfile" parent="Button.Account.Large">
        <item name="android:text">@string/label_save</item>
    </style>

    <!-- User -->
    <style name="TextView.User.ScreenName" parent="TextView.UserName">
        <item name="android:textColor">@color/am_white</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>
    <style name="TextView.User.Address" parent="TextView">
        <item name="android:textColor">@color/am_white</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:drawableLeft">@drawable/ic_fa_nav</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TextView.User.About" parent="TextView.Multiline">
        <item name="android:maxWidth">200dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/am_white</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="Button.User.AddContact" parent="Button.Primary">
        <item name="android:text">@string/label_add_contact</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="Button.User.Chat" parent="Button.Primary">
        <item name="android:text">@string/label_chat</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="Button.User.EditProfile" parent="Button.Primary">
        <item name="android:text">@string/label_edit_profile</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>

    <!-- Widgets -->
    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/am_grey_extra_light</item>
    </style>
    <style name="Divider.Blur">
        <item name="android:layout_height">0.1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/am_white_blur</item>
    </style>

    <style name="Tab.View" parent="Widget">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">@dimen/margin_large</item>
        <item name="android:paddingBottom">@dimen/margin_extra_small</item>
        <item name="android:background">@color/am_red</item>
    </style>
    <style name="Tab.Text" parent="TextView.Subtitle">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_extra_small</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:textColor">@drawable/tab_text_color</item>
    </style>
    <style name="Tab.Image" parent="ImageView">
        <item name="android:paddingTop">@dimen/margin_extra_small</item>
    </style>

    <style name="MenuItem.Text" parent="TextView">
        <item name="android:textColor">@color/am_white</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>

    <style name="ActionBarTitle.Text" parent="TextView">
        <item name="android:textColor">@color/am_white</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar">
        <item name="android:layout_width">@dimen/image_sz_medium</item>
        <item name="android:layout_height">@dimen/image_sz_medium</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_spinner</item>
    </style>
    <style name="ProgressBar.Small" parent="ProgressBar">
        <item name="android:layout_width">@dimen/image_sz_small</item>
        <item name="android:layout_height">@dimen/image_sz_small</item>
    </style>
    <style name="ProgressBar.Large" parent="ProgressBar">
        <item name="android:layout_width">@dimen/image_sz_large</item>
