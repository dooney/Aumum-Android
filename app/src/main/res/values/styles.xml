<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="LinearLayout" />

    <style name="SingleLineEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="HintEditText" parent="SingleLineEditText">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ShadowText">
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="NavMenuButton">
        <item name="android:textColor">@color/nav_text_selector</item>
        <item name="android:background">@drawable/nav_menu_button_background_selector</item>
    </style>

    <style name="InlineFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="InlineLabel">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="InlineButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bbuton_default</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="InlineEditText" parent="SingleLineEditText">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>

    <style name="ImageView" />
    <style name="ImageView.Avatar" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_medium</item>
        <item name="android:layout_height">@dimen/avatar_sz_medium</item>
    </style>
    <style name="ImageView.Avatar.Small" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_small</item>
        <item name="android:layout_height">@dimen/avatar_sz_small</item>
    </style>
    <style name="ImageView.Avatar.Large" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_large</item>
        <item name="android:layout_height">@dimen/avatar_sz_large</item>
    </style>
    <style name="ImageView.Dropdown" parent="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_fa_chevron_down</item>
    </style>
    <style name="ImageView.Delete.ExtraSmall" parent="ImageView">
        <item name="android:layout_width">@dimen/image_sz_extra_small</item>
        <item name="android:layout_height">@dimen/image_sz_extra_small</item>
        <item name="android:src">@drawable/ic_fa_trash_o</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView"/>
    <style name="TextView.Subtitle" parent="TextView">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="ButtonTextView" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:drawablePadding">0dp</item>
    </style>
    <style name="TextView.Date" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_calendar</item>
        <item name="android:text">@string/label_date</item>
    </style>
    <style name="TextView.Time" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_clock_o</item>
        <item name="android:text">@string/label_time</item>
    </style>
    <style name="TextView.Location" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_map_marker</item>
        <item name="android:text">@string/label_location</item>
    </style>
    <style name="TextView.Age" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_child</item>
        <item name="android:text">@string/label_age</item>
    </style>
    <style name="TextView.Gender" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_gender</item>
        <item name="android:text">@string/label_gender</item>
    </style>
    <style name="TextView.Join" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_user</item>
        <item name="android:text">@string/label_join</item>
    </style>
    <style name="TextView.Comment" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_comment_o</item>
        <item name="android:text">@string/label_comment</item>
    </style>
    <style name="TextView.Like" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_thumbs_o_up</item>
        <item name="android:text">@string/label_like</item>
    </style>

    <style name="TextView.UserName" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Party -->
    <style name="TextView.Party.UserName" parent="TextView.UserName" />
    <style name="TextView.Party.CreatedAt" parent="TextView.Subtitle" />
    <style name="TextView.Party.Area" parent="TextView.Subtitle" />
    <style name="TextView.Party.Title" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_extra_large</item>
        <item name="android:maxLines">3</item>
    </style>
    <style name="TextView.Party.Details" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextView.Party.Members" parent="TextView.Subtitle">
        <item name="android:minWidth">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:drawableLeft">@drawable/ic_fa_user</item>
    </style>
    <style name="TextView.Party.Likes" parent="TextView.Subtitle">
        <item name="android:minWidth">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:drawableLeft">@drawable/ic_fa_thumbs_up</item>
    </style>
    <style name="LinearLayout.Party.UserAvatars" parent="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/avatar_sz_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="ButtonTextView.NewParty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>
    <style name="ButtonTextView.NewParty.Date" parent="ButtonTextView.NewParty">
        <item name="android:drawableLeft">@drawable/ic_fa_calendar_l</item>
        <item name="android:text">@string/label_date</item>
    </style>
    <style name="ButtonTextView.NewParty.Time" parent="ButtonTextView.NewParty">
        <item name="android:drawableLeft">@drawable/ic_fa_clock_o_l</item>
        <item name="android:text">@string/label_time</item>
    </style>
    <style name="ButtonTextView.NewParty.Age" parent="ButtonTextView.NewParty">
        <item name="android:drawableLeft">@drawable/ic_fa_child_l</item>
        <item name="android:text">@string/label_age</item>
    </style>
    <style name="ButtonTextView.NewParty.Gender" parent="ButtonTextView.NewParty">
        <item name="android:drawableLeft">@drawable/ic_fa_gender_l</item>
        <item name="android:text">@string/label_gender</item>
    </style>
    <style name="EditText.NewParty.Location" parent="EditText">
        <item name="android:drawableLeft">@drawable/ic_fa_map_marker_l</item>
        <item name="android:hint">@string/label_location</item>
    </style>
    <style name="EditText.NewParty.Title" parent="EditText">
        <item name="android:hint">@string/label_title</item>
    </style>
    <style name="EditText.NewParty.Details" parent="EditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">text|textCapSentences|textMultiLine</item>
        <item name="android:maxLines">4</item>
        <item name="android:hint">@string/hint_party_details</item>
    </style>

    <!-- Message -->
    <style name="TextView.Message.UserName" parent="TextView.UserName" />
    <style name="TextView.Message.CreatedAt" parent="TextView.Subtitle" >
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="TextView.Message.Body" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Comment -->
    <style name="TextView.Comment.UserName" parent="TextView.UserName" />
    <style name="TextView.Comment.CreatedAt" parent="TextView.Subtitle" >
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="TextView.Comment.Text" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- User -->
    <style name="TextView.User.UserName" parent="TextView.UserName" />
    <style name="TextView.User.Follow" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_plus_circle</item>
        <item name="android:text">@string/label_follow</item>
    </style>
    <style name="TextView.User.EditProfile" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_edit</item>
        <item name="android:text">@string/label_profile</item>
    </style>

    <!-- Widgets -->
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
    <style name="ListSpinner" parent="Spinner">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider_grey</item>
    </style>

    <style name="TabPageIndicator.Text">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>
    <style name="TabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textAppearance">@style/TabPageIndicator.Text</item>
    </style>

    <style name="MenuItemTextAppearance">
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar" />
</resources>