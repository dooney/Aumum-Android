    <style name="EditText.AddContact.Intro" parent="EditText" />

    <!-- Profile -->
    <style name="TextView.Profile" parent="TextView.Title" />
    <style name="TextView.Profile.ScreenName" parent="TextView.Profile" />
    <style name="TextView.Profile.About" parent="TextView.Subtitle">
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

