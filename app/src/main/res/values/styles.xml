<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="LinearLayout" />

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
    </style>
    <style name="Button.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_margin">0dp</item>
    </style>
    <style name="Button.Primary" parent="Button">
        <item name="android:background">@drawable/bbuton_primary_rounded</item>
    </style>
    <style name="Button.Danger" parent="Button">
        <item name="android:background">@drawable/bbuton_danger_rounded</item>
    </style>
    <style name="Button.Primary.Small" parent="Button.Small">
        <item name="android:background">@drawable/bbuton_primary_rounded</item>
    </style>
    <style name="Button.Danger.Small" parent="Button.Small">
        <item name="android:background">@drawable/bbuton_danger_rounded</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>

    <style name="EditText.Box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">text|textCapSentences|textMultiLine</item>
        <item name="android:maxLines">4</item>
        <item name="android:minLines">2</item>
        <item name="android:paddingTop">@dimen/margin_extra_small</item>
        <item name="android:paddingBottom">@dimen/margin_extra_small</item>
        <item name="android:paddingLeft">@dimen/margin_large</item>
    </style>

    <style name="EditText.Box.Send" parent="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:src">@drawable/ic_fa_send_o</item>
    </style>

    <style name="ImageView" />
    <style name="ImageView.Avatar" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_medium</item>
        <item name="android:layout_height">@dimen/avatar_sz_medium</item>
    </style>
    <style name="ImageView.Avatar.Small" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_small</item>
        <item name="android:layout_height">@dimen/avatar_sz_small</item>
    </style>
    <style name="ImageView.Avatar.Large" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_large</item>
        <item name="android:layout_height">@dimen/avatar_sz_large</item>
    </style>
    <style name="ImageView.Dropdown" parent="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_fa_chevron_down</item>
    </style>
    <style name="ImageView.Delete.ExtraSmall" parent="ImageView">
        <item name="android:layout_width">@dimen/image_sz_extra_small</item>
        <item name="android:layout_height">@dimen/image_sz_extra_small</item>
        <item name="android:src">@drawable/ic_fa_trash_o</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView"/>
    <style name="LinkTextView" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_link</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TextView.Subtitle" parent="TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="ButtonTextView" parent="TextView.Subtitle">
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:drawablePadding">0dp</item>
    </style>
    <style name="TextView.Date" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_calendar</item>
    </style>
    <style name="TextView.Time" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_clock_o</item>
    </style>
    <style name="TextView.Location" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_home</item>
    </style>
    <style name="TextView.Age" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_child</item>
    </style>
    <style name="TextView.Gender" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_gender</item>
    </style>
    <style name="TextView.Comment" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_comment_o</item>
        <item name="android:text">@string/label_comment</item>
    </style>
    <style name="TextView.Like" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_thumbs_o_up</item>
        <item name="android:text">@string/label_like</item>
    </style>
    <style name="TextView.UserName" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_link</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextView.Content.Text" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <!-- Party -->
    <style name="TextView.Party.UserName" parent="TextView.UserName" >
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>
    <style name="TextView.Party.CreatedAt" parent="TextView.Subtitle" />
    <style name="TextView.Party.Title" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:maxLines">3</item>
    </style>
    <style name="TextView.Party.Distance" parent="ButtonTextView" >
        <item name="android:drawableLeft">@drawable/ic_fa_map_marker</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="TextView.Party.Details" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextView.Party.Members" parent="TextView.Subtitle">
        <item name="android:drawableLeft">@drawable/ic_fa_user</item>
    </style>
    <style name="TextView.Party.Likes" parent="TextView.Subtitle">
        <item name="android:drawableLeft">@drawable/ic_fa_thumbs_up_s</item>
    </style>
    <style name="TextView.Party.Join" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_join</item>
        <item name="android:text">@string/label_join_party</item>
    </style>
    <style name="TextView.Party.CheckIn" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_camera</item>
        <item name="android:text">@string/label_check_in</item>
    </style>
    <style name="PopupWindow.Party.SearchNearby" parent="PopupWindow.Text">
        <item name="android:drawableLeft">@drawable/ic_fa_map_marker_lw</item>
        <item name="android:text">@string/label_search_nearby</item>
    </style>
    <style name="PopupWindow.Party.SearchAddress" parent="PopupWindow.Text">
        <item name="android:drawableLeft">@drawable/ic_fa_home_lw</item>
        <item name="android:text">@string/label_search_address</item>
    </style>
    <style name="LinearLayout.Party.UserAvatars" parent="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/avatar_sz_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="ButtonTextView.NewParty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>
    <style name="ButtonTextView.NewParty.Date" parent="ButtonTextView.NewParty">
        <item name="android:drawableLeft">@drawable/ic_fa_calendar_l</item>
        <item name="android:text">@string/label_date</item>
    </style>
    <style name="ButtonTextView.NewParty.Time" parent="ButtonTextView.NewParty">
        <item name="android:drawableLeft">@drawable/ic_fa_clock_o_l</item>
        <item name="android:text">@string/label_time</item>
    </style>
    <style name="ButtonTextView.NewParty.Age" parent="ButtonTextView.NewParty">
        <item name="android:drawableLeft">@drawable/ic_fa_child_l</item>
        <item name="android:text">@string/label_age</item>
    </style>
    <style name="ButtonTextView.NewParty.Gender" parent="ButtonTextView.NewParty">
        <item name="android:drawableLeft">@drawable/ic_fa_gender_l</item>
        <item name="android:text">@string/label_gender</item>
    </style>
    <style name="EditText.NewParty.Location" parent="EditText">
        <item name="android:drawableLeft">@drawable/ic_fa_home_l</item>
        <item name="android:hint">@string/hint_party_location</item>
    </style>
    <style name="EditText.NewParty.Title" parent="EditText">
        <item name="android:hint">@string/hint_party_title</item>
    </style>
    <style name="EditText.NewParty.Details" parent="EditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">text|textCapSentences|textMultiLine</item>
        <item name="android:maxLines">4</item>
        <item name="android:hint">@string/hint_party_details</item>
    </style>
    <style name="TextView.PartyReason.UserName" parent="TextView.UserName" />
    <style name="TextView.PartyReason.CreatedAt" parent="TextView.Subtitle" >
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="TextView.PartyReason.Action" parent="TextView.Subtitle" >
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="TextView.PartyReason.Text" parent="TextView.Content.Text" />

    <!-- Moment -->
    <style name="EditText.Box.Moment" parent="EditText.Box">
        <item name="android:paddingRight">@dimen/margin_large</item>
    </style>

    <!-- Circle -->
    <style name="PopupWindow.Circle.SearchKeyword" parent="PopupWindow.Text">
        <item name="android:text">@string/label_search_circle_keyword</item>
    </style>
    <style name="TextView.Conversation.ScreenName" parent="TextView.UserName">
        <item name="android:textSize">@dimen/margin_extra_large</item>
    </style>
    <style name="TextView.Group.ScreenName" parent="TextView.UserName">
        <item name="android:textSize">@dimen/margin_extra_large</item>
    </style>
    <style name="TextView.Group.CurrentSize" parent="TextView.Subtitle" />
    <style name="PopupWindow.Circle.SearchAll" parent="PopupWindow.Text">
        <item name="android:text">@string/label_search_all_circles</item>
    </style>
    <style name="Button.Group.Action" parent="Button.Primary.Small">
        <item name="android:minWidth">48sp</item>
        <item name="android:minHeight">32sp</item>
    </style>

    <!-- Message -->
    <style name="TextView.Message.UserName" parent="TextView.UserName" />
    <style name="TextView.Message.CreatedAt" parent="TextView.Subtitle" >
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="TextView.Message.Action" parent="TextView.Subtitle" >
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="TextView.Message.Content" parent="TextView.Content.Text" >
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
    </style>
    <style name="TextView.MessageParent.Content" parent="TextView.Subtitle" />
    <style name="ButtonTextView.Message" parent="ButtonTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:padding">@dimen/margin_large</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="ButtonTextView.Message.PartyMembership" parent="ButtonTextView.Message">
        <item name="android:drawableLeft">@drawable/ic_fa_user_l</item>
        <item name="android:text">@string/label_party_join</item>
    </style>
    <style name="ButtonTextView.Message.PartyComments" parent="ButtonTextView.Message">
        <item name="android:drawableLeft">@drawable/ic_fa_comments_o</item>
        <item name="android:text">@string/label_party_comments</item>
    </style>
    <style name="ButtonTextView.Message.PartyLikes" parent="ButtonTextView.Message">
        <item name="android:drawableLeft">@drawable/ic_fa_thumbs_o_up</item>
        <item name="android:text">@string/label_party_likes</item>
    </style>

    <!-- Comment -->
    <style name="TextView.Comment.UserName" parent="TextView.UserName" />
    <style name="TextView.Comment.CreatedAt" parent="TextView.Subtitle" >
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="TextView.Comment.Text" parent="TextView.Content.Text" />

    <!-- User -->
    <style name="TextView.User.UserName" parent="TextView.UserName" />
    <style name="TextView.User.Follow" parent="Button.Primary">
        <item name="android:drawableLeft">@drawable/ic_fa_plus_circle</item>
        <item name="android:text">@string/label_follow</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>
    <style name="TextView.User.EditProfile" parent="Button.Primary">
        <item name="android:drawableLeft">@drawable/ic_fa_edit</item>
        <item name="android:text">@string/label_profile</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>
    <style name="TextView.User.Area" parent="ButtonTextView">
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TextView.User">
        <item name="android:layout_width">155sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>
    <style name="ButtonTextView.User.FollowingsCount" parent="TextView.User">
        <item name="android:text">@string/label_followings_count</item>
    </style>
    <style name="ButtonTextView.User.FollowersCount" parent="TextView.User">
        <item name="android:text">@string/label_followers_count</item>
    </style>
    <style name="ButtonTextView.User.CommentsCount" parent="TextView.User">
        <item name="android:text">@string/label_comments_count</item>
    </style>
    <style name="ButtonTextView.User.PartyPostCount" parent="TextView.User">
        <item name="android:text">@string/label_party_post_count</item>
    </style>
    <style name="ButtonTextView.User.JoinedPartyCount" parent="TextView.User">
        <item name="android:text">@string/label_joined_party_count</item>
    </style>
    <style name="LinkTextView.User" parent="LinkTextView">
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>

    <!-- Splash -->
    <style name="Button.Splash.SignUp" parent="Button.Primary">
        <item name="android:background">@drawable/bbuton_danger_rounded</item>
    </style>
    <style name="Button.Splash.SignIn" parent="Button.Primary" />

    <!-- Account -->
    <style name="EditText.Email" parent="EditText">
        <item name="android:drawableLeft">@drawable/ic_fa_envelope</item>
        <item name="android:hint">@string/hint_email_address</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <style name="EditText.Password" parent="EditText">
        <item name="android:drawableLeft">@drawable/ic_fa_lock</item>
        <item name="android:hint">@string/hint_password</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="EditText.ScreenName" parent="EditText">
        <item name="android:drawableLeft">@drawable/ic_fa_user_l</item>
        <item name="android:hint">@string/hint_screen_name</item>
        <item name="android:inputType">textPersonName</item>
    </style>
    <style name="ButtonTextView.Account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>
    <style name="ButtonTextView.Account.Area" parent="ButtonTextView.Account">
        <item name="android:drawableLeft">@drawable/ic_fa_home_l</item>
        <item name="android:hint">@string/hint_area</item>
    </style>
    <style name="ButtonTextView.Account.Avatar" parent="ButtonTextView.Account">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_fa_camera</item>
        <item name="android:hint">@string/hint_avatar</item>
    </style>
    <style name="Button.Account.SignUp" parent="Button.Primary">
        <item name="android:text">@string/label_sign_up</item>
    </style>
    <style name="Button.Account.SignIn" parent="Button.Primary">
        <item name="android:text">@string/label_sign_in</item>
    </style>
    <style name="Button.Account.ResetPassword" parent="Button.Primary">
        <item name="android:text">@string/label_submit</item>
    </style>

    <!-- Widgets -->
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
    <style name="ListSpinner" parent="Spinner">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider_grey</item>
    </style>

    <style name="TabPageIndicator.Text">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textAppearance">@style/TabPageIndicator.Text</item>
    </style>

    <style name="MenuItem.Text" parent="TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>

    <style name="ActionBarTitle.Text" parent="TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>

    <style name="PopupWindow.Text" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:paddingTop">@dimen/margin_large</item>
        <item name="android:paddingBottom">@dimen/margin_large</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">0dp</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar" />
</resources>