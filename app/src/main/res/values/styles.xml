        <item name="android:background">@drawable/bbuton_danger_rounded</item>
    </style>
    <style name="Button.Splash.SignIn" parent="Button.Primary" />

    <!-- Account -->
    <style name="TextView.Account" parent="TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>
    <style name="ButtonTextView.Account.Country" parent="ButtonTextView.Account">
        <item name="android:drawableLeft">@drawable/ic_fa_country</item>
        <item name="android:text">@string/label_country</item>
    </style>
    <style name="TextView.Account.Country" parent="TextView.Account" />
    <style name="TextView.Account.CountryCode" parent="TextView.Account" />
    <style name="EditText.Login.Phone" parent="EditText">
        <item name="android:drawableLeft">@drawable/ic_fa_mobile</item>
        <item name="android:hint">@string/hint_login_phone</item>
        <item name="android:inputType">phone</item>
    </style>
    <style name="EditText.Login.Password" parent="EditText">
        <item name="android:drawableLeft">@drawable/ic_fa_lock</item>
        <item name="android:hint">@string/hint_login_password</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="EditText.Register.Phone" parent="EditText">
        <item name="android:drawableLeft">@drawable/ic_fa_mobile</item>
        <item name="android:hint">@string/hint_register_phone</item>
        <item name="android:inputType">phone</item>
