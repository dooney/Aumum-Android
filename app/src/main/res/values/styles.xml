<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="LinearLayout" />
    <style name="LinearLayout.NavButton" parent="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/button_navigation</item>
    </style>
    <style name="RelativeLayout" />
    <style name="RelativeLayout.NavButton" parent="RelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_large</item>
        <item name="android:background">@drawable/button_navigation</item>
    </style>
    <style name="RelativeLayout.ListNavButton" parent="RelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/margin_large</item>
        <item name="android:paddingRight">@dimen/margin_large</item>
        <item name="android:background">@drawable/button_list_navigation</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
    </style>
    <style name="Button.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_margin">0dp</item>
    </style>
    <style name="Button.Primary" parent="Button">
        <item name="android:background">@drawable/bbuton_primary_rounded</item>
    </style>
    <style name="Button.Danger" parent="Button">
        <item name="android:background">@drawable/bbuton_danger_rounded</item>
    </style>
    <style name="Button.Primary.Small" parent="Button.Small">
        <item name="android:background">@drawable/bbuton_primary_rounded</item>
    </style>
    <style name="Button.Danger.Small" parent="Button.Small">
        <item name="android:background">@drawable/bbuton_danger_rounded</item>
    </style>
    <style name="Button.Action" parent="Button.Primary.Small">
        <item name="android:minWidth">48sp</item>
        <item name="android:minHeight">32sp</item>
    </style>
    <style name="Button.Action.Send" parent="Button.Action">
        <item name="android:text">@string/label_send</item>
    </style>
    <style name="Button.Dialog" parent="Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@drawable/button_dialog_text</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:layout_margin">0dp</item>
    </style>
    <style name="Button.Dialog.Ok" parent="Button.Dialog">
        <item name="android:text">@string/label_ok</item>
    </style>
    <style name="Button.Dialog.Cancel" parent="Button.Dialog">
        <item name="android:text">@string/label_cancel</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>
    <style name="EditText.Mandatory" parent="EditText">
        <item name="android:textColorHint">@color/bbutton_danger</item>
    </style>
    <style name="EditText.Box" parent="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">left|top</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">textMultiLine</item>
    </style>
