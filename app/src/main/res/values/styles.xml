<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="LinearLayout" />

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
    </style>
    <style name="Button.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_margin">0dp</item>
    </style>
    <style name="Button.Primary" parent="Button">
        <item name="android:background">@drawable/bbuton_primary_rounded</item>
    </style>
    <style name="Button.Danger" parent="Button">
        <item name="android:background">@drawable/bbuton_danger_rounded</item>
    </style>
    <style name="Button.Primary.Small" parent="Button.Small">
        <item name="android:background">@drawable/bbuton_primary_rounded</item>
    </style>
    <style name="Button.Danger.Small" parent="Button.Small">
        <item name="android:background">@drawable/bbuton_danger_rounded</item>
    </style>
    <style name="Button.Action" parent="Button.Primary.Small">
        <item name="android:minWidth">48sp</item>
        <item name="android:minHeight">32sp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>

    <style name="EditText.Box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">left|top</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">text|textCapSentences|textMultiLine</item>
        <item name="android:paddingTop">@dimen/margin_extra_small</item>
        <item name="android:paddingBottom">@dimen/margin_extra_small</item>
        <item name="android:paddingLeft">@dimen/margin_large</item>
    </style>

    <style name="EditText.Box.Send" parent="ImageView">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:src">@drawable/ic_fa_send_o</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ImageView.Avatar" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_medium</item>
        <item name="android:layout_height">@dimen/avatar_sz_medium</item>
    </style>
    <style name="ImageView.Avatar.Small" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_small</item>
        <item name="android:layout_height">@dimen/avatar_sz_small</item>
    </style>
    <style name="ImageView.Avatar.Large" parent="ImageView">
        <item name="android:layout_width">@dimen/avatar_sz_large</item>
        <item name="android:layout_height">@dimen/avatar_sz_large</item>
    </style>
    <style name="ImageView.Unread.Small" parent="ImageView">
        <item name="android:src">@drawable/image_unread_background</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="LinkTextView" parent="TextView">
        <item name="android:textColor">@color/text_link</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TextView.Title" parent="TextView">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextView.Subtitle" parent="TextView">
        <item name="android:textColor">@color/text_light</item>
    </style>
    <style name="TextView.Subtitle.Small" parent="TextView.Subtitle">
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:textColor">@color/text_light</item>
    </style>
    <style name="ButtonTextView" parent="TextView.Subtitle">
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TextView.Time" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_clock_o</item>
    </style>
    <style name="TextView.Location" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_home</item>
    </style>
    <style name="TextView.Age" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_child</item>
    </style>
    <style name="TextView.Gender" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_gender</item>
    </style>
    <style name="TextView.Comment" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_comment_o</item>
        <item name="android:text">@string/label_comment</item>
    </style>
    <style name="TextView.Like" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_thumbs_o_up</item>
        <item name="android:text">@string/label_like</item>
    </style>
    <style name="TextView.Favorite" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_star_o</item>
        <item name="android:text">@string/label_favorite</item>
    </style>
    <style name="TextView.UserName" parent="TextView">
        <item name="android:textColor">@color/text_link</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextView.NoMore" parent="TextView">
        <item name="android:text">@string/info_no_more</item>
        <item name="android:textColor">@color/bbutton_danger</item>
    </style>
    <style name="TextView.Loading" parent="TextView">
        <item name="android:text">@string/info_loading</item>
        <item name="android:textColor">@color/bbutton_danger</item>
    </style>
    <style name="TextView.Content.Text" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <!-- Party -->
    <style name="TextView.Party.UserName" parent="TextView.UserName" >
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>
    <style name="TextView.Party.Area" parent="TextView.Subtitle" />
    <style name="TextView.Party.CreatedAt" parent="TextView.Subtitle.Small" />
    <style name="TextView.Party.Title" parent="TextView">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:maxLines">3</item>
    </style>
    <style name="TextView.Party.Distance" parent="ButtonTextView" >
        <item name="android:drawableLeft">@drawable/ic_fa_map_marker</item>
        <item name="android:textColor">@color/text_light</item>
    </style>
    <style name="TextView.Party.Details" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextView.Party.Members" parent="TextView.Subtitle">
        <item name="android:drawableLeft">@drawable/ic_fa_user</item>
    </style>
    <style name="TextView.Party.Likes" parent="TextView.Subtitle">
        <item name="android:drawableLeft">@drawable/ic_fa_thumbs_up_s</item>
    </style>
    <style name="TextView.Party.Join" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_join</item>
        <item name="android:text">@string/label_join_party</item>
    </style>
    <style name="LinearLayout.Party.UserAvatars" parent="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/avatar_sz_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="ButtonTextView.NewParty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>
    <style name="ButtonTextView.NewParty.Date" parent="ButtonTextView.NewParty">
        <item name="android:drawableLeft">@drawable/ic_fa_calendar_l</item>
        <item name="android:text">@string/label_date</item>
    </style>
    <style name="ButtonTextView.NewParty.Time" parent="ButtonTextView.NewParty">
        <item name="android:drawableLeft">@drawable/ic_fa_clock_o_l</item>
        <item name="android:text">@string/label_time</item>
    </style>
    <style name="ButtonTextView.NewParty.Age" parent="ButtonTextView.NewParty">
        <item name="android:drawableLeft">@drawable/ic_fa_child_l</item>
        <item name="android:text">@string/label_age</item>
    </style>
    <style name="ButtonTextView.NewParty.Gender" parent="ButtonTextView.NewParty">
        <item name="android:drawableLeft">@drawable/ic_fa_gender_l</item>
        <item name="android:text">@string/label_gender</item>
    </style>
    <style name="EditText.NewParty.Location" parent="EditText">
        <item name="android:drawableLeft">@drawable/ic_fa_home_l</item>
        <item name="android:hint">@string/hint_party_location</item>
    </style>
    <style name="EditText.NewParty.Title" parent="EditText">
        <item name="android:hint">@string/hint_party_title</item>
    </style>
    <style name="EditText.NewParty.Details" parent="EditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">text|textCapSentences|textMultiLine</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:maxLines">4</item>
        <item name="android:hint">@string/hint_party_details</item>
    </style>
    <style name="TextView.NewParty.AddMore" parent="TextView.Subtitle">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:text">@string/label_add_more</item>
    </style>
    <style name="TextView.PartyReason.UserName" parent="TextView.UserName" />
    <style name="TextView.PartyReason.CreatedAt" parent="TextView.Subtitle.Small" />
    <style name="TextView.PartyReason.Action" parent="TextView.Subtitle.Small" />
    <style name="TextView.PartyReason.Text" parent="TextView.Content.Text" />

    <!-- Asking -->
    <style name="EditText.NewAsking.Question" parent="EditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">text|textCapSentences|textMultiLine</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:maxLines">4</item>
        <item name="android:hint">@string/hint_asking_question</item>
    </style>
    <style name="TextView.NewAsking.AddMore" parent="TextView.Subtitle">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:text">@string/label_add_more</item>
    </style>
    <style name="TextView.NewAsking.Type" parent="TextView">
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TextView.Asking.UserName" parent="TextView.UserName">
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="TextView.Asking.Area" parent="TextView.Subtitle.Small" />
    <style name="TextView.Asking.UpdatedAt" parent="TextView.Subtitle.Small" />
    <style name="TextView.Asking.Question" parent="TextView.Content.Text">
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>
    <style name="ImageView.Asking.HasPic" parent="ImageView">
        <item name="android:src">@drawable/ic_fa_image_s</item>
    </style>
    <style name="TextView.Asking.Reply" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_comments_o_s</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="TextView.Asking.Favorite" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_star_o_s</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="TextView.AskingDetails.Question" parent="TextView.Content.Text">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>
    <style name="TextView.AskingDetails.Reply" parent="ButtonTextView">
        <item name="android:drawableLeft">@drawable/ic_fa_comments_o</item>
        <item name="android:text">@string/label_reply</item>
    </style>
    <style name="TextView.AskingReply.Content" parent="TextView.Content.Text" />
    <style name="TextView.AskingReply.UserName" parent="TextView.UserName" />
    <style name="TextView.AskingReply.CreatedAt" parent="TextView.Subtitle.Small" />
    <style name="TextView.AskingReply.Like" parent="TextView.Like">
        <item name="android:drawableLeft">@drawable/ic_fa_thumbs_o_up_s</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:text">@null</item>
    </style>

    <!-- Conversation -->
    <style name="TextView.Conversation.ScreenName" parent="TextView.UserName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>
    <style name="TextView.Conversation.MessageBody" parent="TextView.Subtitle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextView.Conversation.TimeStamp" parent="TextView.Subtitle.Small" />

    <!-- Chat -->
    <style name="Button.Chat.VoiceMode" parent="Button">
        <item name="android:layout_width">@dimen/image_sz_small</item>
        <item name="android:layout_height">@dimen/image_sz_small</item>
        <item name="android:background">@drawable/button_set_voice_mode</item>
    </style>
    <style name="Button.Chat.Keyboard" parent="Button">
        <item name="android:layout_width">@dimen/image_sz_small</item>
        <item name="android:layout_height">@dimen/image_sz_small</item>
        <item name="android:background">@drawable/button_set_keyboard_mode</item>
    </style>
    <style name="EditText.Chat.Text" parent="EditText">
        <item name="android:minHeight">40dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
    </style>
    <style name="TextView.Chat.PressToTalk" parent="TextView.Title">
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:text">@string/label_press_to_talk</item>
    </style>
    <style name="TextView.Chat.RecordingHint" parent="TextView">
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:text">@string/label_move_up_to_cancel</item>
    </style>
    <style name="Button.Chat.TypeSelect" parent="Button">
        <item name="android:layout_width">@dimen/image_sz_small</item>
        <item name="android:layout_height">@dimen/image_sz_small</item>
        <item name="android:background">@drawable/button_message_type_select</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
    </style>
    <style name="Button.Chat.Send" parent="Button.Primary">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:text">@string/label_send</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>
    <style name="TextView.ChatMessage.TimeStamp" parent="TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:background">@drawable/chat_msg_background</item>
    </style>
    <style name="TextView.ChatMessage.UserName" parent="TextView">
        <item name="android:textColor">@color/text_link</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>
    <style name="TextView.ChatMessage.Text" parent="TextView">
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:maxWidth">225dp</item>
    </style>
    <style name="TextView.ChatMessage.SentText" parent="TextView.ChatMessage.Text">
        <item name="android:background">@drawable/chat_sent_text_background</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="TextView.ChatMessage.ReceivedText" parent="TextView.ChatMessage.Text">
        <item name="android:background">@drawable/chat_received_text_background</item>
    </style>
    <style name="TextView.ChatMessage.System" parent="TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:background">@drawable/chat_msg_background</item>
    </style>
    <style name="TextView.ChatMessage.Type" parent="TextView">
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TextView.ChatMessage.VoiceLength" parent="TextView.Subtitle.Small" />
    <style name="ImageView.ChatMessage.SentVoice" parent="ImageView">
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:src">@drawable/chat_sent_voice_playing</item>
        <item name="android:background">@drawable/chat_sent_voice_background</item>
    </style>
    <style name="ImageView.ChatMessage.SentFailed" parent="ImageView">
        <item name="android:src">@drawable/chat_msg_sent_failed_icon</item>
    </style>
    <style name="ImageView.ChatMessage.ReceivedVoice" parent="ImageView">
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:src">@drawable/chat_received_voice_playing</item>
        <item name="android:background">@drawable/chat_received_voice_background</item>
    </style>
    <style name="ImageView.ChatMessage.VoiceUnread" parent="ImageView">
        <item name="android:src">@drawable/image_unread_background</item>
    </style>
    <style name="ImageView.ChatMessage.Image" parent="ImageView">
        <item name="android:maxWidth">128dp</item>
        <item name="android:maxHeight">128dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Contact -->
    <style name="TextView.Contact" parent="TextView.Title" />
    <style name="TextView.Contact.ScreenName" parent="TextView.Contact" />
    <style name="TextView.ContactRequest.ScreenName" parent="TextView.Title" />
    <style name="TextView.ContactRequest.Intro" parent="TextView.Subtitle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Button.ContactRequest.Accept" parent="Button.Action">
        <item name="android:text">@string/label_accept</item>
    </style>
    <style name="TextView.ContactRequest.Added" parent="TextView.Subtitle">
        <item name="android:text">@string/label_added</item>
    </style>
    <style name="TextView.Group.ScreenName" parent="TextView.Title" />
    <style name="TextView.Group.CurrentSize" parent="TextView.Subtitle" />
    <style name="Button.Group.Action" parent="Button.Action" />

    <!-- Comment -->
    <style name="TextView.Comment.UserName" parent="TextView.UserName" />
    <style name="TextView.Comment.CreatedAt" parent="TextView.Subtitle" >
        <item name="android:textSize">@dimen/text_sz_small</item>
    </style>
    <style name="TextView.Comment.Text" parent="TextView.Content.Text" />

    <!-- User -->
    <style name="TextView.User" parent="TextView.Title" />
    <style name="TextView.User.ScreenName" parent="TextView.User" />
    <style name="TextView.User.About" parent="TextView.Subtitle">
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    <style name="Button.User.AddContact" parent="Button.Primary">
        <item name="android:text">@string/label_add_contact</item>
    </style>
    <style name="Button.User.SendMessage" parent="Button.Primary">
        <item name="android:text">@string/label_send_message</item>
    </style>
    <style name="Button.User.DeleteContact" parent="Button.Danger">
        <item name="android:text">@string/label_delete_contact</item>
