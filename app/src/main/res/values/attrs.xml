<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Tab">
        <attr name="mainTabViewStyle" format="reference" />
        <attr name="topTabViewStyle" format="reference" />
        <attr name="mainTabTextStyle" format="reference" />
        <attr name="topTabTextStyle" format="reference" />
        <attr name="tabImageStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="ToggleButton">
        <attr name="borderWidth" format="dimension"/>
        <attr name="offBorderColor" format="reference|color"/>
        <attr name="offColor" format="reference|color"/>
        <attr name="onColor" format="reference|color"/>
        <attr name="spotColor" format="reference|color"/>
    </declare-styleable>
    <attr name="siArrowPosition">
        <enum name="left" value="0" />
        <enum name="right" value="1" />
    </attr>
    <declare-styleable name="ShaderImageView">
        <attr name="siSquare" format="boolean" />
        <attr name="siBorderColor" format="color" />
        <attr name="siBorderWidth" format="dimension" />
        <attr name="siBorderAlpha" format="float" />
        <attr name="siArrowPosition"/>
        <attr name="siTriangleHeight" format="dimension"/>
    </declare-styleable>
</resources>