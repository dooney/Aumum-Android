<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Aumum.Light" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/am_white_light</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/MenuItem.Text</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="mainTabViewStyle">@style/Tab.View</item>
        <item name="mainTabTextStyle">@style/Tab.Text</item>
        <item name="tabImageStyle">@style/Tab.Image</item>
    </style>

    <style name="Theme.Aumum.Light.NoTitle" parent="@style/Theme.Aumum.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Aumum.Light.ActionBarOverlay" parent="@style/Theme.Aumum.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitle.Text</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle.Text</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="background">@color/am_red</item>
        <item name="android:background">@color/am_red</item>
    </style>

</resources>