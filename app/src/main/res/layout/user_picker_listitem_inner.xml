<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/list_selector_transparent">

    <TextView
        android:id="@+id/text_catalog"
        style="@style/TextView.Subtitle"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large"
        android:text="A"/>

    <LinearLayout
        android:id="@+id/layout_user_card"
        style="@style/LinearLayout.ListNavButton">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.aumum.app.mobile.ui.view.AvatarImageView
                android:id="@+id/image_avatar"
                style="@style/ImageView.Avatar"
                android:layout_marginRight="@dimen/margin_large"/>

            <TextView
                android:id="@+id/text_screen_name"
                style="@style/TextView.Title"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/checkbox"
            style="@style/ImageView.Checkbox"/>

    </LinearLayout>

</LinearLayout>