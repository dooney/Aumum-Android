<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_extra_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_extra_large"
        android:paddingLeft="@dimen/margin_extra_large"
        android:paddingRight="@dimen/margin_extra_large"
        android:paddingBottom="@dimen/margin_medium"
        android:background="@drawable/bbuton_default"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/image_preview"
            style="@style/ImageView.SpecialProduct.Preview"/>

        <TextView
            android:id="@+id/text_name"
            style="@style/TextView.SpecialProduct.Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_was"
                style="@style/TextView.SpecialProduct.Was" />

            <TextView
                android:id="@+id/text_now"
                style="@style/TextView.SpecialProduct.Now" />

        </LinearLayout>

        <View style="@style/Divider"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <com.aumum.app.mobile.ui.view.LikeTextView
                    android:id="@+id/text_like"
                    style="@style/TextView.SpecialProduct.Like"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <com.aumum.app.mobile.ui.view.FavoriteTextView
                    android:id="@+id/text_favorite"
                    style="@style/TextView.SpecialProduct.Favorite"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>