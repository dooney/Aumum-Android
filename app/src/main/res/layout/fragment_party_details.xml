<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_large"
        android:paddingLeft="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_medium">

            <com.aumum.app.mobile.ui.view.AvatarImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_avatar"
                style="@style/ImageView.Avatar"
                android:layout_marginRight="@dimen/margin_large"
                android:src="@drawable/ic_avatar"
                app:border_color="@color/transparent"/>

            <TextView
                android:id="@+id/text_user_name"
                style="@style/TextView.Party.UserName"
                android:layout_toRightOf="@+id/image_avatar"
                android:layout_marginBottom="@dimen/margin_small" />

            <com.aumum.app.mobile.ui.view.DropdownImageView
                android:id="@+id/image_dropdown"
                style="@style/ImageView.Dropdown"
                android:layout_alignParentRight="true" />

            <ProgressBar
                android:id="@+id/progress_party"
                style="@style/ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone" />

            <TextView
                style="@style/TextView.Subtitle"
                android:id="@+id/text_createdAt"
                android:layout_below="@+id/text_user_name"
                android:layout_alignLeft="@+id/text_user_name"
                android:layout_marginRight="@dimen/margin_medium"/>

            <TextView
                style="@style/TextView.Subtitle"
                android:id="@+id/text_area"
                android:layout_below="@+id/text_user_name"
                android:layout_toRightOf="@+id/text_createdAt"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/text_title"
            style="@style/TextView.Party.Title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_date"
                style="@style/TextView.Date" />

            <TextView
                android:id="@+id/text_time"
                style="@style/TextView.Time"
                android:layout_toRightOf="@+id/text_date"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/text_location"
            style="@style/TextView.Location" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_small">

            <TextView
                android:id="@+id/text_age"
                style="@style/TextView.Age" />

            <TextView
                android:id="@+id/text_gender"
                style="@style/TextView.Gender"
                android:layout_toRightOf="@+id/text_age"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/text_details"
            style="@style/TextView.Party.Details" />

        <RelativeLayout
            android:id="@+id/layout_likes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:visibility="gone" >

            <TextView
                android:id="@+id/text_likes_count"
                style="@style/TextView.Party.Likes" />

            <LinearLayout
                android:id="@+id/layout_liking_avatars"
                style="@style/LinearLayout.Party.UserAvatars"
                android:layout_below="@+id/text_likes_count" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@android:id/empty"
        style="@style/TextView.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pb_loading"
        style="@style/ListSpinner"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/layout_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_join_box"
        android:layout_alignWithParentIfMissing="true"
        android:background="#eeffffff">

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/text_join"
                    style="@style/TextView.Join" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <include
        android:id="@+id/layout_join_box"
        layout="@layout/party_include_join_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>