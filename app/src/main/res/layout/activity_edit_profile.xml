<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/am_white"
    android:padding="@dimen/margin_extra_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/LinearLayout.NavButton">

            <TextView
                style="@style/TextView.Label"
                android:text="@string/label_mobile"/>

            <TextView
                android:id="@+id/text_mobile"
                style="@style/TextView"/>

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout.NavButton">

            <TextView
                style="@style/TextView.Label"
                android:text="@string/label_country"/>

            <TextView
                android:id="@+id/text_country"
                style="@style/TextView"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_avatar"
            style="@style/LinearLayout.NavButton">

            <TextView
                style="@style/TextView.Label"
                android:text="@string/label_avatar"/>

            <com.aumum.app.mobile.ui.view.AvatarImageView
                android:id="@+id/image_avatar"
                style="@style/ImageView.Avatar.ExtraLarge"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_screen_name"
            style="@style/LinearLayout.NavButton">

            <TextView
                style="@style/TextView.Label"
                android:text="@string/label_screen_name"/>

            <TextView
                android:id="@+id/text_screen_name"
                style="@style/TextView"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_email"
            style="@style/LinearLayout.NavButton">

            <TextView
                style="@style/TextView.Label"
                android:text="@string/label_email_address"/>

            <TextView
                android:id="@+id/text_email"
                style="@style/TextView"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_city"
            style="@style/LinearLayout.NavButton">

            <TextView
                style="@style/TextView.Label"
                android:text="@string/label_city"/>

            <TextView
                android:id="@+id/text_city"
                style="@style/TextView"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_area"
            style="@style/LinearLayout.NavButton">

            <TextView
                style="@style/TextView.Label"
                android:text="@string/label_area"/>

            <TextView
                android:id="@+id/text_area"
                style="@style/TextView"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_large">

            <TextView
                android:id="@+id/text_label_about"
                style="@style/TextView.Label"
                android:text="@string/label_about"/>

            <TextView
                android:id="@+id/text_about"
                style="@style/TextView.Multiline"
                android:layout_alignTop="@+id/text_label_about"
                android:layout_toRightOf="@+id/text_label_about"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>