<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_extra_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_extra_large"
        android:background="@drawable/bbuton_default"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/image_vendor_logo"
            style="@style/ImageView.Special.VendorLogo"
            android:paddingBottom="@dimen/margin_large"/>

        <TextView
            style="@style/TextView"
            android:text="@string/label_this_special"/>

        <TextView
            android:id="@+id/text_info"
            style="@style/TextView.Special.Info" />

        <TextView
            android:id="@+id/text_likes"
            style="@style/TextView.Special.Likes" />

    </LinearLayout>

</RelativeLayout>