<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_background">

        <RelativeLayout
            android:id="@+id/layout_mobile_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_mobile_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_large"
                android:src="@drawable/ic_fa_phone"/>

            <TextView
                style="@style/TextView.Contact"
                android:layout_toRightOf="@+id/image_mobile_contacts"
                android:layout_centerVertical="true"
                android:text="@string/label_mobile_contacts"/>

        </RelativeLayout>

        <View style="@style/Divider"/>

    </LinearLayout>

</RelativeLayout>
