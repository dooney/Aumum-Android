<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector_white"
    android:padding="@dimen/margin_large">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.aumum.app.mobile.ui.view.AvatarImageView
            android:id="@+id/image_avatar"
            style="@style/ImageView.Avatar"
            android:layout_marginRight="@dimen/margin_medium"/>

        <TextView
            android:id="@+id/text_screen_name"
            style="@style/TextView.UserName"
            android:layout_toRightOf="@+id/image_avatar"
            android:layout_marginRight="@dimen/margin_medium"/>

        <TextView
            style="@style/TextView"
            android:textSize="@dimen/text_sz_small"
            android:layout_toRightOf="@+id/text_screen_name"
            android:layout_alignBaseline="@+id/text_screen_name"
            android:text="@string/label_comment_moment"/>

        <TextView
            android:id="@+id/text_createdAt"
            style="@style/TextView.Subtitle.Small"
            android:layout_alignLeft="@+id/text_screen_name"
            android:layout_alignBottom="@+id/image_avatar"/>

        <TextView
            android:id="@+id/text_comment"
            style="@style/TextView.Multiline"
            android:paddingTop="@dimen/margin_medium"
            android:layout_alignLeft="@+id/text_createdAt"
            android:layout_below="@+id/text_createdAt"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_moment"
        android:layout_width="80dp"
        android:layout_height="80dp" />

</LinearLayout>