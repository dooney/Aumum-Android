<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/am_red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_extreme_large"
        android:paddingRight="@dimen/margin_extreme_large">

        <TextView
            style="@style/TextView.Account"
            android:text="@string/label_reset_password_success_tip"
            android:paddingBottom="@dimen/margin_medium"/>

        <TextView
            android:id="@+id/text_email"
            style="@style/TextView.ResetPassword.Email"
            android:text="isimpsondu@gmail.com"/>

        <Button
            android:id="@+id/b_resend"
            style="@style/Button.ResendResetPassword"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:layout_marginBottom="@dimen/margin_extra_large"/>

        <TextView
            style="@style/TextView.Account.Small"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/info_reset_password_tip"/>

    </LinearLayout>

</RelativeLayout>