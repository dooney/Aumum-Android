<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.aumum.app.mobile.ui.view.pulltorefresh.XGridView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alwaysDrawnWithCache="true"
            app:column_count="3"
            app:item_margin="2dp"
            android:layout_above="@+id/layout_action"/>

        <RelativeLayout
            android:id="@+id/layout_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <View
                style="@style/Divider"
                android:background="@color/grey_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_large">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.beardedhen.androidbootstrap.BootstrapButton
                        xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/b_delete_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_delete_contact"
                        bootstrap:bb_icon_left="fa-user-times"
                        bootstrap:bb_type="danger"
                        bootstrap:bb_size="small"
                        android:layout_gravity="center"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.beardedhen.androidbootstrap.BootstrapButton
                        xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/b_add_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_add_contact"
                        bootstrap:bb_icon_left="fa-user-plus"
                        bootstrap:bb_type="primary"
                        bootstrap:bb_size="small"
                        android:layout_gravity="center"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.beardedhen.androidbootstrap.BootstrapButton
                        xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/b_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_chat"
                        bootstrap:bb_icon_left="fa-comments"
                        bootstrap:bb_type="primary"
                        bootstrap:bb_size="small"
                        android:layout_gravity="center"/>

                </FrameLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_loading"
        style="@style/ListSpinner" />

    <TextView
        android:id="@+id/text_reload"
        style="@style/TextView.Reload"
        android:visibility="gone"/>

</LinearLayout>