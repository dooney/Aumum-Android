<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_large">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_avatar"
            style="@style/ImageView.Avatar"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_large"
            android:src="@drawable/ic_avatar"
            app:border_color="@color/transparent"/>

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_toRightOf="@+id/image_avatar"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/text_follow"
            style="@style/TextView.Follow"
            android:layout_below="@+id/text_user_name"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toRightOf="@+id/image_avatar" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_title"
        style="@style/TextView.Party.Title"
        android:layout_below="@+id/layout_card_header"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large" />

    <TextView
        android:id="@+id/text_time"
        style="@style/TextView.Time"
        android:layout_below="@+id/text_title"
        android:layout_marginLeft="@dimen/margin_large"/>

    <TextView
        android:id="@+id/text_location"
        style="@style/TextView.Location"
        android:layout_below="@+id/text_time"
        android:layout_marginLeft="@dimen/margin_large"/>

    <TextView
        android:id="@+id/text_age"
        style="@style/TextView.Age"
        android:layout_below="@+id/text_location"
        android:layout_marginLeft="@dimen/margin_large"/>

    <TextView
        android:id="@+id/text_gender"
        style="@style/TextView.Gender"
        android:layout_below="@+id/text_age"
        android:layout_marginLeft="@dimen/margin_large"/>

    <TextView
        android:id="@+id/text_details"
        style="@style/TextView.Party.Details"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_gender"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_details"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@color/bootstrap_divider_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:padding="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/bt_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fa_users"/>

            <TextView
                android:id="@+id/text_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_join"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/bt_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fa_comments_o"/>
            <TextView
                android:id="@+id/text_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_comment"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/bt_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fa_thumbs_o_up"/>

            <TextView
                android:id="@+id/text_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_like"/>
            </LinearLayout>

    </LinearLayout>

</RelativeLayout>