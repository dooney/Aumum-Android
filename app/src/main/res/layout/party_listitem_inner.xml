<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_large"
    android:paddingLeft="@dimen/margin_large"
    android:paddingRight="@dimen/margin_large">

    <RelativeLayout
        android:id="@+id/layout_card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_medium">

        <com.aumum.app.mobile.ui.view.AvatarImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_avatar"
            style="@style/ImageView.Avatar"
            android:layout_marginRight="@dimen/margin_large"
            android:src="@drawable/ic_avatar"
            app:border_color="@color/transparent"/>

        <TextView
            android:id="@+id/text_user_name"
            style="@style/TextView.Party.UserName"
            android:layout_toRightOf="@+id/image_avatar"
            android:layout_marginBottom="@dimen/margin_small" />

        <com.aumum.app.mobile.ui.view.DropdownImageView
            android:id="@+id/image_dropdown"
            style="@style/ImageView.Dropdown"
            android:layout_alignParentRight="true" />

        <ProgressBar
            android:id="@+id/progress_party"
            style="@style/ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_createdAt"
            style="@style/TextView.Party.CreatedAt"
            android:layout_below="@+id/text_user_name"
            android:layout_alignLeft="@+id/text_user_name"
            android:layout_marginRight="@dimen/margin_medium"/>

        <TextView
            android:id="@+id/text_area"
            style="@style/TextView.Party.Area"
            android:layout_below="@+id/text_user_name"
            android:layout_toRightOf="@+id/text_createdAt"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_title"
        style="@style/TextView.Party.Title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_date"
            style="@style/TextView.Date" />

        <TextView
            android:id="@+id/text_time"
            style="@style/TextView.Time"
            android:layout_toRightOf="@+id/text_date"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_location"
        style="@style/TextView.Location" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small">

        <TextView
            android:id="@+id/text_age"
            style="@style/TextView.Age" />

        <TextView
            android:id="@+id/text_gender"
            style="@style/TextView.Gender"
            android:layout_toRightOf="@+id/text_age" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_medium"
        android:visibility="gone" >

        <TextView
            android:id="@+id/text_members_count"
            style="@style/TextView.Party.Members" />

        <LinearLayout
            android:id="@+id/layout_members_avatars"
            style="@style/LinearLayout.Party.UserAvatars"
            android:layout_below="@+id/text_members_count" />

    </RelativeLayout>

    <View style="@style/Divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <com.aumum.app.mobile.ui.view.CommentTextView
                android:id="@+id/text_comment"
                style="@style/TextView.Comment" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <com.aumum.app.mobile.ui.view.LikeTextView
                android:id="@+id/text_like"
                style="@style/TextView.Like" />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>