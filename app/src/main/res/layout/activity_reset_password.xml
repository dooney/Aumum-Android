<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_extreme_large"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <com.greenhalolabs.emailautocompletetextview.EmailAutoCompleteTextView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/et_email"
        style="@style/EditText.ResetPassword.Email"
        app:clearButtonDrawable="@drawable/ic_fa_times"
        android:hint="@string/hint_reset_password_email"
        android:imeOptions="actionDone" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
        android:id="@+id/b_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_submit"
        android:textSize="@dimen/text_sz_extra_large"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large"
        bootstrap:bb_type="primary"/>

</LinearLayout>