<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aumum.app.mobile"
    android:versionCode="102"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.aumum.app.mobile.BootstrapApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Bootstrap.Dark" >
        <activity
            android:name="com.aumum.app.mobile.ui.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name="com.aumum.app.mobile.authenticator.AccountAuthenticatorService"
            android:process=":auth" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <activity
            android:name="com.aumum.app.mobile.authenticator.SplashActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.aumum.app.mobile.authenticator.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.aumum.app.mobile.authenticator.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.aumum.app.mobile.authenticator.RegistrationSuccessActivity"
            android:label="@string/title_activity_registration_success" >
        </activity>
        <activity
            android:name="com.aumum.app.mobile.authenticator.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password" >
        </activity>
        <activity
            android:name="com.aumum.app.mobile.authenticator.ResetPasswordSuccessActivity"
            android:label="@string/title_activity_reset_password_success" >
        </activity>
        <activity
            android:name="com.aumum.app.mobile.ui.NewPartyPostActivity"
            android:label="@string/title_activity_new_party_post" >
        </activity>
    </application>

</manifest>
